@model List<Anyone4Tennis.Models.ViewModels.MemberViewModel>

@{
    ViewData["Title"] = "Members List";
}

<h2>Members List</h2>

<form asp-action="UpdateMemberStatus" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Active</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].FirstName</td>
                    <td>@Model[i].LastName</td>
                    <td>@Model[i].Email</td>
                    <td>
                        <input type="checkbox" name="members[@i].Active" value="true" @(Model[i].Active ? "checked" : "") />
                        <input type="hidden" name="members[@i].MemberId" value="@Model[i].MemberId" />
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
