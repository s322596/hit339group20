@model IEnumerable<Anyone4Tennis.Models.ViewModels.MemberViewModel>

@{
    ViewData["Title"] = "MemberList";
}

<h1>Member List</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>@(member.Active ? "Active" : "Inactive")</td>
            </tr>
        }
    </tbody>
</table>

