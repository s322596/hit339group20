@model List<Anyone4Tennis.Models.ViewModels.MemberViewModel>

@{
    ViewData["Title"] = "Members List";
}

<h2>Members List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Email</td>
                <td>
                    <!-- Checkbox to show the current active status -->
                    <input type="checkbox" name="Active" value="true" @(member.Active ? "checked" : "") />
                </td>
                <td>
                    <form asp-action="UpdateMemberStatus" method="post">
                        <!-- Hidden field for MemberId -->
                        <input type="hidden" name="MemberId" value="@member.MemberId" />
                        <!-- Checkbox for the form submission -->
                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
