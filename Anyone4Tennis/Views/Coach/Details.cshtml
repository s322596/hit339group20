@model Anyone4Tennis.Models.ViewModels.CoachViewModel

@{
    ViewData["Title"] = "Coach Details";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="coach-details">
    <h1>Details</h1>

    <div>
        <h4>Coach Profile</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Biography)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Biography)
            </dd>
            <dt class="col-sm-2">
                Profile Picture
            </dt>
            <dd class="col-sm-10">
                @if (Model.Photo != null && Model.Photo.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)"
                         alt="@Model.FirstName @Model.LastName"
                         style="max-width: 200px; height: auto;" />
                }
                else
                {
                    <p>No photo available</p>
                }
            </dd>
        </dl>
    </div>

    <div>
        <a href="@Url.Action("List", "Coach")">Back to list</a>
    </div>
</div>
<footer>
    <p>© 2024 - Anyone4Tennis - <a href="/privacy">Privacy</a></p>
</footer>